---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contato</Fragment>
      <Fragment slot="desc">Estamos aqui para lhe ajudar.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Contate o RochaGPT</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Têm algo para nos dizer? Estamos aqui para auxiliar. Preencha o
          formulário e entraremos em contato assim que possível.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>3385 Av. Oswaldo Reis, Praia Brava. Itajaí - SC</span>
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:suporte@rochagpt.com"
              class="hover:underline">suporte@rochagpt.com</a
            >
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
