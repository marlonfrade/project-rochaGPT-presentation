---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import LucyHero from "@assets/lucy-hero.png";
import LucyHero2 from "@assets/lucy-hero2.png";
import { Picture } from "@astrojs/image/components";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<Layout title="Lucy">
  <Container>
    <section
      class="mx-auto mt-6 max-w-screen-2xl px-4 sm:mt-8 md:px-8 lg:pt-10"
    >
      <div class="mb-8 flex flex-wrap justify-between md:mb-16">
        <div
          class="mb-6 flex w-full flex-col justify-center sm:mb-12 lg:mb-0 lg:w-1/3 lg:pb-24 lg:pt-48"
        >
          <h1
            class="text-black-800 mb-4 text-4xl font-bold leading-7 sm:text-5xl md:mb-8 md:text-6xl"
          >
            LUCY,<br />
          </h1>

          <p class="max-w-md leading-relaxed text-gray-500 xl:text-lg">
            Quer melhorar ainda mais a sua experi√™ncia e adicionar intelig√™ncia
            artificial em comunidades para ind√∫strias ou WEB3? Experimente Lucy
            üêµ
          </p>
          <div class="mt-6 flex flex-col gap-3 sm:flex-row">
            <Link
              href="https://lucy.monkeybranch.com.br"
              target="_blank"
              class="flex items-center justify-center gap-1"
              rel="noopener"
            >
              <Icon
                class="mr-2 h-5 w-5 text-white"
                name="bi:discord"
                optimize="true"
              />

              Fale com a Lucy
            </Link>
          </div>
        </div>

        <div class="z-0 mb-12 flex w-full md:mb-16 lg:w-2/3">
          <div
            class="relative left-12 top-12 z-10 -ml-12 overflow-hidden rounded-lg bg-gray-100 shadow-lg md:left-16 md:top-16 lg:ml-0"
          >
            <Picture
              src={LucyHero}
              alt="Astronaut in the air"
              widths={[200, 400, 1000]}
              aspectRatio="4:3"
              sizes="(max-width: 100%) 100vw, 100%"
              loading="eager"
              format="avif"
              class="h-full w-full object-cover object-center"
            />
          </div>

          <div class="overflow-hidden rounded-lg bg-gray-100 shadow-lg">
            <Picture
              src={LucyHero2}
              alt="Astronaut in the air"
              widths={[200, 400, 1000]}
              aspectRatio="4:3"
              sizes="(max-width: 100%) 100vw, 100%"
              loading="eager"
              format="avif"
              class="h-full w-full object-cover object-center"
            />
          </div>
        </div>
      </div>
    </section>
  </Container>
</Layout>
